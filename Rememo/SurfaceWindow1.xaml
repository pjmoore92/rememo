                                <s:SurfaceListBoxItem> 04:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 05:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 06:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 07:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 08:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 09:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 10:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 11:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 12:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 13:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 14:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 15:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 16:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 17:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 18:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 19:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 20:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 21:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 22:00 </s:SurfaceListBoxItem>
                                <s:SurfaceListBoxItem> 23:00 </s:SurfaceListBoxItem>
                            </s:SurfaceListBox>

                        </Grid>
                        <Label Content="Time:" HorizontalAlignment="Right" FontSize="32" Margin="0,143,0,6" VerticalContentAlignment="Center" />
                    </Grid>

                    <!-- Annotation selection -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--<s:SurfaceButton Style="{StaticResource ButtonStyle}" Background="{StaticResource Colour6}" Grid.Column="0" Content="Circle" Width="200" Height="80" FontSize="32" Name="button_circle" Click="button_circle_Click" />
                        <s:SurfaceButton Style="{StaticResource ButtonStyle}" Background="{StaticResource Colour6}" Grid.Column="1" Content="Underline" Width="200" Height="80" FontSize="32" Name="button_underline" Click="button_underline_Click" />
                        <s:SurfaceButton Style="{StaticResource ButtonStyle}" Background="{StaticResource Colour6}" Grid.Column="2" Content="Star" Width="200" Height="80" FontSize="32" Name="button_star" Click="button_star_Click" />-->
                    </Grid>

                    <!-- Cancel, OK -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <s:SurfaceButton Background="Red" Grid.Column="0" Content="Cancel" Width="200" Height="100" FontSize="32" Name="button_cancelEntry" Click="button_cancelEntry_Click" />

                        <s:SurfaceButton Background="Green" Grid.Column="1" Width="200" Height="100" Name="button_acceptEntry" Click="button_acceptEntry_Click">
                            <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content=":)" FontSize="64">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <RotateTransform Angle="90" />
                                        <TranslateTransform X="75" Y="25" />
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                        </s:SurfaceButton>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Name="TabConfig" Header="Config">
                <Grid>
                    <Label Margin="172,237,681,511">ReMemo Username</Label>
                    <s:SurfaceTextBox Name="userName" Margin="48,-124,-48,124" Height="61" Width="452"  TextChanged="userName_TextChanged"/>
                    <s:SurfaceButton Content="Save" Grid.Column="1" Height="70" HorizontalAlignment="Left" Margin="436,388,0,0" Name="button2" VerticalAlignment="Top" Width="136" Click="button2_Click" />
                </Grid>
            </TabItem>

        </TabControl>
        
        
    </Grid>
</s:SurfaceWindow>
